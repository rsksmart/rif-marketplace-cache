{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*"
  ]
}
